{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    },
    "interface-name": [
      false,
      "never-prefix"
    ],
    "ordered-imports": [
      false
    ],
    "no-console": false,
    "jsx-no-lambda": false,
    "object-literal-sort-keys": false,
    "max-classes-per-file": ["error", 10],
    "only-arrow-functions": [
      false
    ]
  },
  "jsRules": {
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}